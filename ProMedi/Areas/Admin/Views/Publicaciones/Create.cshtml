@model ProMedi.Models.ViewModels.PublicacionViewModel
@{
    ViewData["Title"] = "Crear Publicacion";
}

<br />
<br />
<h3 class="text-center">Crear una nueva publicacion</h3>
<form method="POST" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Publicacion.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Publicacion.Nombre" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Publicacion.Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Publicacion.Descripcion"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Publicacion.Descripcion" class="form-control" style="height:300px;"></textarea>
                    <span asp-validation-for="Publicacion.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label for="Categoría">Categoría</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(x => x.Publicacion.CategoriaId, Model.ListaCategorias, "-selecciones una categoria-"
                    , new {@class = "form-control"})
                    <span asp-validation-for="Publicacion.CategoriaId" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Publicacion.UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type= "file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="Publicacion.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <br />



            <div class="form-group-row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js" integrity="sha512-VCEWnpOl7PIhbYMcb64pqGZYez41C2uws/M/mDdGPy+vtEJHd9BqbShE4/VNnnZdr7YCPOjd+CBmYca/7WWWCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}