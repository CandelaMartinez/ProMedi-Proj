@model ProMedi.Models.Categoria
@{
    ViewData["Title"] = "Lista de Publicaciones";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Publicaciones</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>Crear nueva publicacion</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblPublicaciones" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Imagen</th>
                <th>Fecha de Creacion</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/publicacion.js"></script>
}