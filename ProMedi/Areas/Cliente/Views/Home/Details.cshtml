@model ProMedi.Models.Publicacion

@{
    ViewData["Title"] = "Detalle Publicacion";

    //la fecha de creacion en mi modelo es un String, quiero que se muestre solo la fecha y no la hora
    DateTime fechaDeCreacion = DateTime.Parse(Model.FechaCreacion);
    string fechaModificada = fechaDeCreacion.ToString("dd/MM/yy");

}

<br />
<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light">
            <div class="col-12">
                <h1 class="text-primary text-center">@Model.Nombre</h1>
            </div>
            <div class="col-12">
                <p class="text-muted">Fecha: @fechaModificada</p>
            </div>
        </div>
        <div class="card-body">
            <div class="col-120">
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
